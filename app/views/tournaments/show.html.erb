<p id="notice"><%= notice %></p>

<p>
  <b>Date:</b>
  <%= @tournament.date %>
</p>

<p>
  <b>Location:</b>
  <%= @tournament.location %>
</p>

<div>
	<p><b>SMU Participants</b></p>
	<ul id="participant_listing">
	  <% @tournament.participants.each do |participant| %>
	  <li id="<%= participant_id_helper(participant) %>"><%= User.find(participant.user_id).name %>   <%= link_to 'delete participant', tournament_participant_path(@tournament, participant), confirm: "Are you sure?", method: :delete, remote: true %></li>
	  <% end %>
    </ul>
    
</div>

<br />
<%= link_to 'Add Participants', new_tournament_participant_path(@tournament), id: "new_tournament_participant_link", remote: true %>

<table class="table table-bordered">
  <tr>
    <th>Place</th>
    <th>Team Name</th>
  </tr>

<% @tournament.results.each do |result| %>
  <tr id="<%= result_id_helper(result) %>">
    <td><%= result.place %></td>
    <td><%= result.team_name %>   <%= link_to 'delete result', tournament_result_path(@tournament, result), method: :delete, remote: true %></td>
  </tr>
<% end %>
</table>
<%= link_to 'Add Results', new_tournament_result_path(@tournament) %>
<br />

<div class="dropdown">  
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Tutorials<b class="caret"></b></a>  
