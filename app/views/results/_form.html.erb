<div id="new_result">
<%= form_for([@tournament, @result], remote: true) do |f| %>
  <% if @result.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@result.errors.count, "error") %> prohibited this result from being saved:</h2>

      <ul>
      <% @result.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :place %><br />
    <%= f.select :place, Result.PLACES, {}, { :prompt => 'Select Place' } %>
  </div>

 
  
  <div class="field">
    <%= f.label :team_name %><br />
    <%= f.text_field :team_name %>
  </div>
  <div class="actions">
    <%= f.submit "Create Result" %>
  </div>
<% end %>
</div>
