<h1>Listing gears</h1>

<table>
  <tr>
    <th>User</th>
    <th>Cost</th>
    <th>Name</th>
    <th>Description</th>
    <th>For sale</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @gears.each do |gear| %>
  <tr>
    <td><%= User.find(gear.user_id).name %></td>
    <td><%= gear.cost %></td>
    <td><%= gear.name %></td>
    <td><%= gear.description %></td>
    <td><%= gear.for_sale %></td>
    <td><%= link_to 'Show', gear %></td>
    <td><%= link_to 'Edit', edit_gear_path(gear) %></td>
    <td><%= link_to 'Destroy', gear, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

