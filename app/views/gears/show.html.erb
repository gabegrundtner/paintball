<p id="notice"><%= notice %></p>

<p>
  <b>Owner:</b>
  <%= User.find(@gear.user_id).name %>
</p>

<p>
  <b>Cost:</b>
  $<%= @gear.cost %>
</p>

<p>
  <b>Name:</b>
  <%= @gear.name %>
</p>

<p>
  <b>Description:</b>
  <%= @gear.description %>
</p>

<p>
  <b>For sale:</b>
  <% if @gear.for_sale %>
  Yes
  <% else %>
  No
  <% end %>
</p>

<br >
<% unless current_user.id == @gear.user_id %>
<div>
  <% if current_user.is_interested(@gear) %>
  <button class="btn btn-large btn-primary" type="button" data-loading-text="Interested">Not Interested Anymore</button>
  <% else %>
 <%= link_to "Mark Interested", mark_interested_gear_user_path(current_user, gear_id: @gear.id), :class => "btn btn-large btn-primary" %>
  <% end %>
</div>
<% end %>


<br >

